{
  "builders": [
    {
      "boot_command": [
        "gentoo-nofb",
        "<enter>",
        "<wait10>",
        "<enter>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "passwd {{user `username`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "/etc/init.d/sshd start",
        "<enter>",
        "<wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 60000,
      "guest_os_type": "linux",
      "headless": true,
      "iso_checksum_type": "sha512",
      "iso_checksum_url": "http://distfiles.gentoo.org/releases/amd64/autobuilds/{{user `stage3`}}/install-amd64-minimal-{{user `stage3`}}.iso.DIGESTS",
      "iso_url": "http://distfiles.gentoo.org/releases/amd64/autobuilds/{{user `stage3`}}/install-amd64-minimal-{{user `stage3`}}.iso",
      "keep_registered": true,
      "remote_type": "esx5",
      "remote_host": "{{ user `esxi_hostname` }}",
      "remote_username": "{{ user `esxi_username` }}",
      "remote_password": "{{ user `esxi_password` }}",
      "remote_datastore": "{{ user `esxi_datastore` }}",
      "shutdown_command": "shutdown -hP now",
      "ssh_password": "{{user `password`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_wait_timeout": "20s",
      "type": "vmware-iso",
      "vm_name": "GentooLinux-auto-{{user `stage3`}}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "numvcpus": "2",
        "memsize": "1024",
        "ethernet0.networkName": "{{user `vm_network`}}"
      }
    }
  ],
  "description": "Faithful Stage 3 Gentoo Installation (VMWare)",
  "post-processors": [
  ],
  "provisioners": [
    {
      "destination": "/tmp",
      "source": "scripts",
      "type": "file"
    },
    {
      "environment_vars": [
        "STAGE3={{user `stage3`}}",
        "VM_TYPE=vmware",
        "SCRIPTS=/tmp"
      ],
      "scripts": [
        "provision.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "password": "packer",
    "stage3": "20161201",
    "username": "root",
    "esxi_datastore": "datastore1",
    "esxi_hostname": "esxi",
    "esxi_username": "root",
    "esxi_password": "PASSWORD",
    "time_zone": "Asia/Tokyo",
    "vm_network": "VM Network"
  }
}

